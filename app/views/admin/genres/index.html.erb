<div class='container-fluid'>
  <div class='row no-gutters bg-white'>

    <div class='col-md-5 mx-auto text-center'>
      <h4 class="h4_text">ジャンル登録</h4> 
      <% if @genre.errors.any? %>
        <div id="error_explanation">
            <%= pluralize(@genre.errors.count, "error") %> 件のエラーがあります:
          <ul>
            <%= genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
        
      <div class="field">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <%= f.label :ジャンル名 %><br />
          <%= f.text_field :name, size: "30x1" %><br /><br />
          <%= f.submit 'ジャンル新規登録', class: 'nav_button' %>
        <% end %>
      </div>
    </div>

    <div class='col-md-5 mx-auto '>
      <h4 class="h4_text">ジャンル一覧</h4>
      <table>
        <tr>
          <th>ジャンル名</th>
        <tr>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

