<div class='container-fluid'>
  <div class='row no-gutters bg-white'>
    <div class='col-md-10 mx-auto'>
      <div class="p-3 mb-2">
        <h4 class="h4_text"><%= @genre.name %>一覧</h4>
      </div>

      <div class="row"> 
      <!-- 並び替え -->
      <table>
        <tr>
          <td width="1%"><%= link_to '古い順', books_path(@genre, old: "true") %></td>
          <td width="1%"><%= link_to '新しい順', books_path(@genre, new: "true") %></td>
          <td width="10%"><%= link_to 'ブックマークの多い順', books_path(@genre, bookmark: "true") %></td>
        </tr>
      </table>
    
      <!-- 書籍一覧 -->
      <%= render "temp/book_index", books: @books %>
      </div>
    </div>

  </div>
</div>