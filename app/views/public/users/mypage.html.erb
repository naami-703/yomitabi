
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-2 mx-auto p-3">
      <h3>マイページ</h3>
    </div>
      <div class="col-md-2 mx-auto p-3">
        <div class="profile_image">
          <%= image_tag @user.get_profile_image(100, 100) %>
        </div>
      </div>
      <div class="col-md-4 mx-auto p-3">
        <table class="profile_table">
          <tr>
            <td class="title">ユーザー名</td>
            <td class="title"><%= @user.name %></td>
         </tr>
          <tr>
            <td class="title">自己紹介</td>
            <td class="body"><%= @user.introduction %></td>
          </tr>
          <tr>
          <td class="title">好きな本</td>
          <td class="body"><%= @user.favorite_books %></td>
          </tr>
        </table>
      </div>
      <div class="col-md-2  mx-auto p-3">
        <%= link_to '編集する', edit_user_path(current_user) %><br>
        <%= link_to '退会する', user_path(current_user), method: :destroy, "data-confirm" => "本当に退会しますか？" %>
      </div>
  </div>

  <div class="row">
    <div class="col-md-12 ">
      
      <div class="tabs d-flex justify-content-between align-items-center">
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#my_book_post">書籍投稿</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#my_spot_post">スポット投稿</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#my_comment_post">コメント投稿</a>
          </li>
          <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#my_bookmark_check">ブックマーク登録</a>
          </li>
          <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#my_want_to_go_check">行きたい！登録</a>
          </li>
          <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#my_went_check">行ったよ！登録</a>
          </li>
        </ul>
      </div>
      
      <div class="tab-content">
        <div id="my_book_post" class="tab-pane fade show active">
          <%= render "temp/my_book_post", books: @books, user: @user %>
        </div>

        <div id="my_spot_post" class="tab-pane fade">
          <%= render "temp/my_spot_post", spots: @spots, user: @user  %>
        </div>

        <div id="my_comment_post" class="tab-pane fade">
          <%= render "temp/my_comment_post" %>
        </div>

        <div id="my_bookmark_check" class="tab-pane fade">
          <%= render "temp/my_bookmark_check" %>
        </div>

        <div id="my_want_to_go_check" class="tab-pane fade">
          <%= render "temp/my_want_to_go_check" %>
        </div>

        <div id="my_went_check" class="tab-pane fade">
          <%= render "temp/my_went_check" %>
        </div>
      </div>
    </div>
  </div>
</div>
