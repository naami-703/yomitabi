<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto text-center">

      <!-- error -->
      <% if @user.errors.any? %>
        <ul class="alert-error">
          <h6 class="alert-error">
            <%= @user.errors.count %>errors prohibited this obj from being saved:
          </h6>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <h3 class="h3_text">  ユーザー情報編集</h3>
      <div class="field">
      <%= form_with model: @user do |f| %>
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %><br />
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br />
          <%= f.label :プロフィール画像 %><br />
          <%= f.file_field :profile_image, accept: "image/*" %><br />
          <%= f.label :自己紹介 %><br />
          <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction," %><br />
          <%= f.label :好きな本 %><br />
          <%= f.text_area :favorite_books, autofocus: true, autocomplete: "favorite_books" %><br />
          <%= f.submit "プロフィール更新", class: "nav_button"%><br />
          <%= link_to '退会する', user_path(current_user), method: :destroy, class: 'btn btn-danger mb-3', "data-confirm" => "本当に退会しますか？" %>
        <% end %>
      </div>

    </div>
  </div>
</div>