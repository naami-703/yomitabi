<div class='container-fluid container-sidebar'>
  <div class='row no-gutters bg-white'>
    <div class='col-md-2 bg-custom-sidebar'>
      <%= render 'temp/sidebar' %>
    </div>

    <div class="col-md-10 d-flex">
      <!-- 書籍詳細（左側） -->
      <div class="col-md-5">
        <h3>書籍詳細</h3>
          <table class="book_table">
            <tr>
              <th>タイトル</th>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
            </tr>
            <tr>
              <th>表紙画像</th>
              <td><%= image_tag @book.get_book_image(200,200) %></td>
            </tr>
          </table>
          <table class="element_table">
            <% if @book.user == current_user %>
          <tr>
            <td><%= link_to '編集する', edit_book_path(@book.id), class: 'btn btn-info mb-3' %></td>
            <td><%= link_to "削除する", book_path(@book.id), method: :delete, class: 'btn btn-danger mb-3', role: 'button', "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
          <% end %>
          <tr>
            <td>
              <div class="profile_image">
                <%= image_tag @user.get_profile_image(50,50) %>
              </div>
            </td>
            <td><%= link_to @book.user.name, user_path(@user.id) %>さんが登録</td>
          </tr>
        </table>
      </div>

      <!-- コメント＆スポット（右側） -->
      <div class="col-md-8 d-flex flex-column">
        <div class="col-md-12">
          <h4>コメント</h4>
        </div>

        <div class="col-md-12 mt-4">
          <h4>スポット一覧</h4>
        </div>
      </div>

    </div>
  </div>
</div>