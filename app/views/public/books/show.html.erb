<div class='container-fluid'>
  <div class='row no-gutters bg-white'>

    <div class="col-md-10 d-flex">
      <!-- 書籍詳細（左側） -->
      <div class="col-md-5">
        <h3>書籍詳細</h3>
          <table class="book_table">
            <tr>
              <th>タイトル</th>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
            </tr>
            <tr>
              <th>表紙画像</th>
              <td><%= image_tag @book.get_book_image(200,200) %></td>
            </tr>
          </table>
          <table class="element_table">
            <tr>
              <td>ブックマークボタン</td>
            <tr>
            <% if @book.user == current_user %>
              <tr>
                <td><%= link_to '編集する', edit_book_path(@book.id),  class: 'nav_button' %></td>
              </tr>
            <% end %>
          <tr>
            <td>
              <div class="profile_image">
                <%= image_tag @user.get_profile_image(50,50) %>
              </div>
            </td>
            <% if @book.user == current_user %>
            <td><%= link_to @book.user.name, mypage_users_path %>さんが登録</td>
            <% else %>
            <td><%= link_to @book.user.name, user_path(@user.id) %>さんが登録</td>
            <% end %>
          </tr>
        </table>
      </div>

      <!-- コメント＆スポット（右側） -->
      <div class="col-md-8 d-flex flex-column">
        <div class="col-md-12">
          <h3>コメント</h3>
        </div>

        <div class="col-md-12 mt-4">
          <h3>スポット一覧</h3>
        </div>
      </div>

    </div>
  </div>
</div>