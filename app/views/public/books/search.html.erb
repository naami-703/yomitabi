<div class='container-fluid'>
  <div class='row no-gutters'>

    <div class='col-md-10 mx-auto text-center'>
      <h4 class="h4_text">検索結果</h4>
    </div>

    <div class="row">
      <div class='col-md-11 mx-auto text-center'>

        <table class="table text-center">
          <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>著者</th>
              <th></th>
            <tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td width="15%"><%= image_tag(book.large_image_url) %></td>
                <td width="35%"><%= book.title %></td>
                <td width="35%"><%= book.author %></td>
                <td width="15%">
                  <%= link_to "選択", new_book_path(title: book.title, author: book.author, image_url: book.large_image_url), class: "nav_button" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>