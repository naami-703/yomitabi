<div class='container-fluid'>
  <div class='row no-gutters bg-white'>

    <div class="col-md-10 d-flex">
      <!-- スポット詳細（左側） -->
      <div class="col-md-5">
        <h3>スポット詳細</h3>
        <table class="spot_table">
          <tr>
            <th>スポット名</th>
            <td><%= link_to @spot.name, spot_path(@spot.id) %></td>
          </tr>
          <tr>
          <th>住所</th>
          <td><%= @spot.address %></td>
        </tr>
          <tr>
            <th>スポット画像</th>
            <td><%= image_tag @spot.get_spot_image(200,200) %></td>
          </tr>
          </table>
          <table class="element_table">
            <tr>
              <td>行きたい！ボタン</td>
              <td>行ったよ！ボタン</td>
            </tr>
            <% if @spot.user == current_user %>
            <tr>
              <td><%= link_to '編集する', edit_spot_path(@spot.id), class: 'nav_button' %></td>
            </tr>
            <% end %>
            <tr>
              <td>
                <div class="profile_image">
                  <%= image_tag @user.get_profile_image(50,50) %>
                </div>
              </td>
              <% if @spot.user == current_user %>
              <td><%= link_to @spot.user.name, mypage_users_path %>さんが登録</td>
              <% else %>
              <td><%= link_to @spot.user.name, user_path(@user.id) %>さんが登録</td>
              <% end %>
            </tr>
        </table>
      </div>

      <!-- コメント＆スポット（右側） -->
      <div class="col-md-8 d-flex flex-column">
        <div class="col-md-12">
          <h3>コメント</h3>
        </div>

        <div class="col-md-12 mt-4">
          <h3>関連書籍一覧</h3>
        </div>
      </div>

    </div>
  </div>
</div>