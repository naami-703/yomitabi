<div class='container-fluid'>
  <div class='row no-gutters bg-white'>

    <div class='col-md-10  mx-auto text-center'>
      <h3>スポット情報編集</h3>
    </div>

    <div class="row">
      <div class='col-md-8 mx-auto text-center'>
        <div class="field">
        <%= form_with model: @spot do |f| %>
            <%= f.label :スポット名 %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "title" %><br />
            <%= f.label :住所 %><br />
            <%= f.text_field :address, autofocus: true, autocomplete: "adderess" %><br />
            <%= f.label :スポット画像 %><br />
            <%= f.file_field :spot_image, accept: "image/*" %><br /><br />
            <%= f.submit 'スポット情報更新', class: 'nav_button' %><br />
            <%= link_to "削除する", spot_path(@spot.id), method: :delete, class: 'btn btn-danger mb-3', role: 'button', "data-confirm" => "本当に削除しますか？" %>
          <% end %>
        </div>
      </div>
    </div>


  </div>
</div>